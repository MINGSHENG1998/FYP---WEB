@model FYPWEB.Models.DailyTask

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DailyTask</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Task Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt>
            Day of The Week
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt>
            Difficulty
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
        <dt>
            Point (Pts)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Point)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="DELETE" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-default">BACK</button></a>
    </form>
</div>
