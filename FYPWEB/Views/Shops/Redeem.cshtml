@model IEnumerable<FYPWEB.Models.Shop>

@{
    ViewData["Title"] = "Redeem";
}

<h2>Redeem</h2>
<p>Total Points:</p>@ViewBag.point

<table class="table">
    <thead>
        <tr>
            <th style="width:20%">
                Product Name
            </th>
            <th style="width:20%">
                Description
            </th>
            <th style="width:20%">
                Cost (Pts)
            </th>
            <th style="width:20%">
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Pic)" style="width:120px" />
                </td>
                <td>
                    <a asp-area="" asp-controller="Shops" asp-action="Purchase" asp-route-id="@item.ID"><button type="button" class="btn btn-info btn-lg">Redeem</button></a>
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-default">BACK</button></a>
</div>

@*chatbot script*@
<script src="https://account.snatchbot.me/script.js"></script>
<script>window.sntchChat.Init(93986)</script>